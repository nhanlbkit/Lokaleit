<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
	x:Class="Lokaleit.LogInd" 
	 xmlns:controls="clr-namespace:Lokaleit;assembly=Lokaleit"
	>
	<ContentPage.Content>
			<Grid BackgroundColor="#32384c" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
<Grid.RowDefinitions>
			<RowDefinition></RowDefinition>
			<RowDefinition></RowDefinition>
		</Grid.RowDefinitions>
	<Image Source="LocateitLogoWhite.png" VerticalOptions="Center" HorizontalOptions="Center" Margin="15"></Image>
		<StackLayout Grid.Row="1"  Margin="20,-20,20,20"  Spacing="15">
				<controls:IconEntry x:Name="entryEmail" ImageSource="mail_aktiv.png" Placeholder="E-MAIL"></controls:IconEntry>
				<controls:IconEntry x:Name="entryKode" ImageSource="adgangskode_aktiv.png" Placeholder="ADGANSKODE" IsPassword="true"></controls:IconEntry>
				<controls:ImageButton Text="GLEMT ADGANGSKODE" ></controls:ImageButton>
				<Button Style="{StaticResource btnLokale}" Text="LOG IND"> </Button>
				<controls:ImageButton  Text="Log ind med facebook" x:Name="btnFBLogin"  HorizontalOptions="CenterAndExpand" ></controls:ImageButton>
		</StackLayout>
		</Grid>
	</ContentPage.Content>
</ContentPage>
