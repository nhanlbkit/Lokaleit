<?xml version="1.0" encoding="utf-8" ?>
<StackLayout xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lokaleit.ImageButton"
             Spacing="0"
			 x:Name="Control"
             Orientation="Horizontal"
             Margin="12">
  <Image 
      Source="{Binding ImageSource,Source={x:Reference Control}}}"
      WidthRequest="20"
      HeightRequest="20">

  </Image>

<Label  FontAttributes="{Binding FontAttributes,Source={x:Reference Control}}"
		TextColor="White" FontSize="12"
      Text="{Binding Text,Source={x:Reference Control}}">
  </Label>
	
</StackLayout>