<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
	xmlns:controls="clr-namespace:Lokaleit;assembly=Lokaleit"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Lokaleit.Logind">
	<ContentPage.Content>
			<Grid BackgroundColor="#32384c" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
<Grid.RowDefinitions>
			<RowDefinition ></RowDefinition>
			<RowDefinition></RowDefinition>

		</Grid.RowDefinitions>
	<Image Source="LocateitLogoWhite.png" VerticalOptions="Center" HorizontalOptions="Center" Margin="20"></Image>
		<StackLayout Grid.Row="1"  Margin="20,-20,20,20"  Spacing="15" VerticalOptions="StartAndExpand" >
				<controls:IconEntry ImageSource="telefon_aktiv.png" Placeholder="TELEFON"></controls:IconEntry>
			<controls:IconEntry ImageSource="adgangskode_aktiv.png" Placeholder="ADGANGSKODE" IsPassword="true" ></controls:IconEntry>
				<Button Style="{StaticResource btnLokale}" Text="LOG IND" Clicked="Handle_Clicked"> </Button>
				<controls:ImageButton ImageSource="facebook.png" FontAtrributes="Italic"   Text="Log ind med facebook"    HorizontalOptions="CenterAndExpand" ></controls:ImageButton>
		</StackLayout>
		</Grid>
	</ContentPage.Content>
</ContentPage>
